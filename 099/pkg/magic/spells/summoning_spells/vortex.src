use uo;
use os;
use util;

include "include/magic";
var spell_circle := 8;

program cast_summon( parms, spellid )
	var caster := GetSpellCaster (parms);
	if (!caster)
		return 0;
	endif
	if (!CheckSuccessfulSpellCast (parms, spellid))
		return 0;
	endif
	var cast_loc := GetSpellCastOn (caster, parms);
	if (!cast_loc)
		return 0;
	endif

	var duration := 30 + Cint(caster_magery/3);
	SummonCreature (caster, "vortex", cast_loc, duration, 0);
	return 1;
endprogram
