include "include/client";

program Dress (parms)

	set_critical(0);

	var me := parms[1];
	var text := lower(parms[2]);

	var beard := GetEquipmentByLayer( me, LAYER_BEARD );
	DestroyItem( beard );
	var hair := GetEquipmentByLayer( me, LAYER_HAIR );
	DestroyItem( hair );
	foreach thing in listequippeditems(me)
		if (thing.objtype != 0x0E75)
			if (me.backpack)
				MoveItemToContainer(thing, me.backpack);
			else
			       	DestroyItem(thing);
			endif
		endif
	endforeach

	var gender := me.gender;

	PlaceHair(me,gender);
	if (text=="poor")
		DressPoor(me,gender);
		return;
	elseif (text=="rich")
		DressRich(me,gender);
		return;
	elseif (text=="warrior")
		DressWar(me,gender);
		return;
	elseif (text=="weakwarrior")
		DressLeather(me,gender);
		return;
	elseif (text=="mage")
		DressMage(me,gender);
		return;
	elseif (text=="poortokuno")
		DressPoorTok(me,gender);
		return;
	elseif (text=="richtokuno")
		DressRichTok(me,gender);
		return;
	elseif (text=="warriortokuno")
		DressWarTok(me,gender);
		return;
	elseif (text=="weakwarriortokuno")
		DressLeatherTok(me,gender);
		return;
	elseif (text=="magetokuno")
		DressMageTok(me,gender);
		return;
	elseif (text=="platetokuno")
		DressPlateTok(me,gender);
		return;
	elseif (text=="poorelf")
		DressElf(me,gender);
		return;
	elseif (text=="richelf")
		DressElf(me,gender);
		return;
	elseif (text=="warriorelf")
		DressWarElf(me,gender);
		return;
	elseif (text=="weakwarriorelf")
		DressLeaf(me,gender);
		return;
	elseif (text=="mageelf")
		DressMageElf(me,gender);
		return;
	elseif (text=="poorgarg")
		DressPoor(me,gender);
		return;
	elseif (text=="richgarg")
		DressRich(me,gender);
		return;
	elseif (text=="warriorgarg")
		DressWar(me,gender);
		return;
	elseif (text=="weakwarriorgarg")
		DressLeather(me,gender);
		return;
	elseif (text=="magegarg")
		DressMage(me,gender);
		return;
	endif

endprogram

function CreateAndEquip(me,item,color)

	if (item)
		var theitem := CreateItemAtLocation(5288 , 1176, 0,item,1, REALM_BRITANNIA);
		if (theitem)
			if (EquipItem(me,theitem))
				theitem.color := color;
			else
				DestroyItem(theitem);
			endif
		endif
	endif

endfunction

